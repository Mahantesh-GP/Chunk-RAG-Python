# Azure OpenAI Configuration
# Copy this file to .env and fill in your Azure credentials

# Azure OpenAI API Configuration
OPENAI_API_KEY=your-azure-openai-key-here
OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Deployment names (model names in Azure)
OPENAI_DEPLOYMENT_NAME_TURBO=gpt-35-turbo
OPENAI_DEPLOYMENT_NAME_GPT4=gpt-4

# Evaluation Settings
EVALUATION_MODE=gpt4  # Options: gpt4 (LLM-based), local (heuristic)
NUM_EVAL_QUESTIONS=20

# Chunk Sizes to Test
CHUNK_SIZES=128,256,512,1024,2048

# Document Path
DOCS_PATH=./docs/
QUERIES_PATH=./queries.json
OUTPUT_PATH=./evaluation_results.json
